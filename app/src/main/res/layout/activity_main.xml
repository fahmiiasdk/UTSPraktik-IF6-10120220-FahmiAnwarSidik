                    app:srcCompat="@drawable/img_7"
                    tools:layout_editor_absoluteX="272dp"
                    tools:layout_editor_absoluteY="103dp" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
